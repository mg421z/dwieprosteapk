<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fitness Tracker"
        android:layout_gravity="center"
        android:textSize="15pt"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                
                <EditText
                    android:id="@+id/item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Wpisz nazwę aktywności"/>
                
                <EditText
                    android:id="@+id/item_distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Wpisz przebytą odległość"/>
                
                <EditText
                    android:id="@+id/item_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Wpisz czas trwania"/>
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                
                <EditText
                    android:id="@+id/item_kcal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Wpisz spalone kalorie"/>
                
                <EditText
                    android:id="@+id/item_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Wpisz opis"/>
                
                <SeekBar
                    android:id="@+id/item_intensity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="2"/>
                
                <TextView
                    android:id="@+id/intensity_value_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Lekki"/>
            </LinearLayout>
        </LinearLayout>
        
        <RadioGroup
            android:id="@+id/item_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
